<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:activity="com.bukhmastov.cdoitmo.fragments.ScheduleLessonsTabFragment"
    android:id="@+id/container_schedule_lessons"
    android:background="?attr/colorBackground">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipe_schedule_lessons"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/scroll_schedule_lessons"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/header_schedule_lessons"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/colorBackgroundSection"
                    android:paddingBottom="@dimen/item_padding"
                    android:paddingTop="@dimen/item_padding">

                    <LinearLayout
                        android:id="@+id/schedule_lessons_titles"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toStartOf="@+id/schedule_lessons_cache"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/schedule_lessons_header"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingEnd="@dimen/item_horizontal_padding"
                            android:paddingStart="@dimen/item_horizontal_padding"
                            android:text="@string/lorem_ipsum"
                            android:textColor="?android:attr/textColorPrimary"
                            android:textSize="@dimen/font_size_14" />

                        <TextView
                            android:id="@+id/schedule_lessons_week"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingEnd="@dimen/item_horizontal_padding"
                            android:paddingStart="@dimen/item_horizontal_padding"
                            android:text="@string/lorem_ipsum"
                            android:textColor="?android:attr/textColorSecondary"
                            android:textSize="@dimen/font_size_14" />

                    </LinearLayout>

                    <FrameLayout
                        android:id="@+id/schedule_lessons_cache"
                        android:layout_width="@dimen/schedule_cache_button"
                        android:layout_height="@dimen/schedule_cache_button"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="0dp"
                        android:layout_marginEnd="@dimen/item_horizontal_padding"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?attr/colorSeparator" />

                <LinearLayout
                    android:id="@+id/schedule_lessons_content"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" />

            </LinearLayout>

        </ScrollView>

    </android.support.v4.widget.SwipeRefreshLayout>

</LinearLayout>
