<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/item_padding"
    android:paddingBottom="0dp"
    android:paddingStart="@dimen/item_padding"
    android:paddingEnd="@dimen/item_padding">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:baselineAligned="false">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/shape_border_round"
            android:layout_margin="@dimen/item_padding_quarter">

            <LinearLayout
                android:id="@+id/default_theme_light"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/item_padding_quarter"
                android:padding="@dimen/item_padding_quarter"
                android:background="?android:attr/selectableItemBackground">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="@string/pref_light_theme"
                    android:textColor="?android:attr/textColorPrimary"
                    android:paddingBottom="@dimen/item_padding_eight"
                    android:textSize="@dimen/font_size_13"
                    android:textStyle="bold"
                    android:textAllCaps="true" />

                <TextView
                    android:id="@+id/default_theme_light_background"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="@string/background_color"
                    android:textColor="?android:attr/textColorSecondary"
                    android:textSize="@dimen/font_size_12"/>

                <TextView
                    android:id="@+id/default_theme_light_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="@string/text_color"
                    android:textColor="?android:attr/textColorSecondary"
                    android:textSize="@dimen/font_size_12"/>

                <TextView
                    android:id="@+id/default_theme_light_opacity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="@string/background_opacity"
                    android:textColor="?android:attr/textColorSecondary"
                    android:textSize="@dimen/font_size_12"/>

            </LinearLayout>

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/shape_border_round"
            android:layout_margin="@dimen/item_padding_quarter">

            <LinearLayout
                android:id="@+id/default_theme_dark"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/item_padding_quarter"
                android:padding="@dimen/item_padding_quarter"
                android:background="?android:attr/selectableItemBackground">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="@string/pref_dark_theme"
                    android:textColor="?android:attr/textColorPrimary"
                    android:paddingBottom="@dimen/item_padding_eight"
                    android:textSize="@dimen/font_size_13"
                    android:textStyle="bold"
                    android:textAllCaps="true"/>

                <TextView
                    android:id="@+id/default_theme_dark_background"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="@string/background_color"
                    android:textColor="?android:attr/textColorSecondary"
                    android:textSize="@dimen/font_size_12"/>

                <TextView
                    android:id="@+id/default_theme_dark_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="@string/text_color"
                    android:textColor="?android:attr/textColorSecondary"
                    android:textSize="@dimen/font_size_12"/>

                <TextView
                    android:id="@+id/default_theme_dark_opacity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="@string/background_opacity"
                    android:textColor="?android:attr/textColorSecondary"
                    android:textSize="@dimen/font_size_12"/>

            </LinearLayout>

        </FrameLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/custom_theme"
        android:textColor="?android:attr/textColorPrimary"
        android:textSize="@dimen/font_size_13"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:layout_margin="@dimen/item_padding_quarter"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/shape_border_round"
        android:layout_margin="@dimen/item_padding_quarter">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/item_padding_half"
            android:layout_marginEnd="@dimen/item_padding_half"
            android:layout_marginTop="@dimen/item_padding_half"
            android:layout_marginBottom="@dimen/item_padding_quarter"
            android:background="@drawable/shape_border_round">

            <LinearLayout
                android:id="@+id/background_color_picker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="@dimen/item_horizontal_padding"
                android:paddingEnd="@dimen/item_horizontal_padding"
                android:paddingTop="@dimen/item_vertical_padding"
                android:paddingBottom="@dimen/item_vertical_padding"
                android:layout_margin="@dimen/separator"
                android:background="@drawable/shape_border_round"
                android:backgroundTint="@android:color/white"
                android:backgroundTintMode="src_in"
                android:gravity="center">

                <TextView
                    android:id="@+id/background_color_picker_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/background_color"
                    android:textColor="?android:attr/textColorPrimary"
                    android:textSize="@dimen/font_size_14" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <TextView
                        tools:ignore="HardcodedText"
                        android:id="@+id/background_color_picker_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="#FFFFFF"
                        android:textColor="?android:attr/textColorPrimary"
                        android:textSize="@dimen/font_size_14" />

                    <ImageView
                        android:id="@+id/background_color_picker_image"
                        android:layout_width="@dimen/dp24"
                        android:layout_height="@dimen/dp24"
                        android:src="@drawable/ic_colorize"
                        android:tint="?android:attr/textColorPrimary"
                        android:padding="@dimen/item_padding_quarter"/>

                    <TextView
                        android:id="@+id/background_color_picker_hint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/pick_color"
                        android:textColor="?android:attr/textColorPrimary"
                        android:textSize="@dimen/font_size_14" />

                </LinearLayout>

            </LinearLayout>

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/item_padding_half"
            android:layout_marginEnd="@dimen/item_padding_half"
            android:layout_marginTop="@dimen/item_padding_quarter"
            android:layout_marginBottom="@dimen/item_padding_quarter"
            android:background="@drawable/shape_border_round">

            <LinearLayout
                android:id="@+id/text_color_picker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="@dimen/item_horizontal_padding"
                android:paddingEnd="@dimen/item_horizontal_padding"
                android:paddingTop="@dimen/item_vertical_padding"
                android:paddingBottom="@dimen/item_vertical_padding"
                android:layout_margin="@dimen/separator"
                android:background="@drawable/shape_border_round"
                android:backgroundTint="@android:color/white"
                android:backgroundTintMode="src_in"
                android:gravity="center">

                <TextView
                    android:id="@+id/text_color_picker_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_color"
                    android:textColor="?android:attr/textColorPrimary"
                    android:textSize="@dimen/font_size_14" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <TextView
                        tools:ignore="HardcodedText"
                        android:id="@+id/text_color_picker_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="#000000"
                        android:textColor="?android:attr/textColorPrimary"
                        android:textSize="@dimen/font_size_14" />

                    <ImageView
                        android:id="@+id/text_color_picker_image"
                        android:layout_width="@dimen/dp24"
                        android:layout_height="@dimen/dp24"
                        android:src="@drawable/ic_colorize"
                        android:tint="?android:attr/textColorPrimary"
                        android:padding="@dimen/item_padding_quarter"/>

                    <TextView
                        android:id="@+id/text_color_picker_hint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/pick_color"
                        android:textColor="?android:attr/textColorPrimary"
                        android:textSize="@dimen/font_size_14" />

                </LinearLayout>

            </LinearLayout>

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/item_padding_half"
            android:layout_marginEnd="@dimen/item_padding_half"
            android:layout_marginTop="@dimen/item_padding_quarter"
            android:layout_marginBottom="@dimen/item_padding_half"
            android:padding="@dimen/separator"
            android:background="@drawable/shape_border_round">

            <LinearLayout
                android:id="@+id/background_opacity_picker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="@dimen/item_horizontal_padding"
                android:paddingEnd="@dimen/item_horizontal_padding"
                android:paddingTop="@dimen/item_vertical_padding"
                android:paddingBottom="@dimen/item_vertical_padding"
                android:background="@drawable/background_transparent"
                android:layout_margin="@dimen/separator"
                android:gravity="center">

                <TextView
                    android:id="@+id/background_opacity_picker_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/background_opacity"
                    android:textColor="?android:attr/textColorPrimary"
                    android:textSize="@dimen/font_size_14"/>

                <SeekBar
                    android:id="@+id/background_opacity_picker_seek_bar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="@dimen/item_padding_half"
                    android:paddingBottom="@dimen/item_padding_quarter"
                    android:progress="150"
                    android:max="255" />

            </LinearLayout>

        </FrameLayout>

    </LinearLayout>

</LinearLayout>