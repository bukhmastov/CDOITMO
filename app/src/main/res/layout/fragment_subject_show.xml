<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorBackground">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_filled_card"
                android:layout_margin="@dimen/item_horizontal_padding_half"
                android:paddingStart="@dimen/item_horizontal_padding_half"
                android:paddingEnd="@dimen/item_horizontal_padding_half"
                android:paddingTop="@dimen/item_vertical_padding_half"
                android:paddingBottom="@dimen/item_vertical_padding_half"
                android:elevation="4dp" >

                <LinearLayout
                    android:id="@+id/as_info_container"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_alignParentStart="true"
                    android:layout_toStartOf="@+id/as_result_container"
                    android:paddingStart="@dimen/item_vertical_padding_half"
                    android:paddingEnd="@dimen/item_vertical_padding_half"
                    android:gravity="center_vertical" >

                    <TextView
                        android:id="@+id/as_info_term"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="@string/lorem_ipsum"
                        android:textColor="?android:attr/textColorPrimaryInverse"
                        android:textSize="@dimen/font_size_14"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/as_info_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="@string/lorem_ipsum"
                        android:textColor="?android:attr/textColorPrimaryInverse"
                        android:textSize="@dimen/font_size_14"
                        android:textStyle="bold" />

                </LinearLayout>

                <FrameLayout
                    android:id="@+id/as_result_container"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_toStartOf="@+id/as_current_points_container" >

                    <TextView
                        android:id="@+id/as_result"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="@dimen/item_horizontal_padding_half"
                        android:layout_marginStart="@dimen/item_horizontal_padding_half"
                        android:background="@drawable/subject_result_border"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:paddingBottom="@dimen/item_vertical_padding_half"
                        android:paddingEnd="@dimen/item_horizontal_padding_half"
                        android:paddingStart="@dimen/item_horizontal_padding_half"
                        android:paddingTop="@dimen/item_vertical_padding_half"
                        android:text="@string/lorem_ipsum"
                        android:textAllCaps="true"
                        android:textColor="?android:attr/textColorPrimaryInverse"
                        android:textSize="@dimen/font_size_12"
                        android:textStyle="bold" />

                </FrameLayout>

                <FrameLayout
                    android:id="@+id/as_current_points_container"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_alignParentEnd="true">

                    <TextView
                        android:id="@+id/as_current_points"
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="99.99"
                        android:textColor="?android:attr/textColorPrimaryInverse"
                        android:textSize="@dimen/font_size_18"
                        android:textStyle="bold" />

                </FrameLayout>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/as_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>