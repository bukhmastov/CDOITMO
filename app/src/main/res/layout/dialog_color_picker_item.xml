<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp42"
    android:layout_height="@dimen/dp42"
    android:layout_margin="@dimen/item_padding_eight"
    android:padding="@dimen/item_padding_eight"
    android:background="@drawable/shape_border_round_big">

    <FrameLayout
        android:id="@+id/sign_selected"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/item_padding_half">

        <ImageView
            android:id="@+id/sign_selected_mark"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_done"/>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/sign_back"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/item_padding_half"
        android:visibility="gone">

        <ImageView
            android:id="@+id/sign_back_mark"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_arrow_back"/>

    </FrameLayout>

</FrameLayout>