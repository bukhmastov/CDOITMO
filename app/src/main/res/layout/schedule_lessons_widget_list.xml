<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/slw_day_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/widget_schedule_lessons_second_header_height"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:paddingStart="@dimen/widget_schedule_lessons_padding"
        android:paddingEnd="@dimen/widget_schedule_lessons_padding"
        android:paddingTop="0dp"
        android:paddingBottom="0dp"
        android:text="@string/lorem_ipsum"
        android:textColor="?android:attr/textColorPrimary"
        android:textSize="@dimen/font_size_10" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/slw_day_schedule" />

</LinearLayout>