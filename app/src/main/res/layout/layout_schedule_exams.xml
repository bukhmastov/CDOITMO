<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/container_schedule_exams">

    <android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/swipe_schedule_exams"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/colorBackgroundSection"
                    android:paddingBottom="@dimen/item_padding"
                    android:paddingTop="@dimen/item_padding" >

                    <LinearLayout
                        android:id="@+id/schedule_exams_titles"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toStartOf="@+id/schedule_exams_menu">

                        <TextView
                            android:id="@+id/schedule_exams_header"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingEnd="@dimen/item_horizontal_padding"
                            android:paddingStart="@dimen/item_horizontal_padding"
                            android:text="@string/lorem_ipsum"
                            android:textColor="?android:attr/textColorPrimary"
                            android:textSize="@dimen/font_size_14" />

                        <TextView
                            android:id="@+id/schedule_exams_week"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingEnd="@dimen/item_horizontal_padding"
                            android:paddingStart="@dimen/item_horizontal_padding"
                            android:text="@string/lorem_ipsum"
                            android:textColor="?android:attr/textColorSecondary"
                            android:textSize="@dimen/font_size_14" />

                    </LinearLayout>

                    <FrameLayout
                        android:id="@+id/schedule_exams_menu"
                        android:layout_width="@dimen/schedule_cache_button"
                        android:layout_height="@dimen/schedule_cache_button"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="0dp"
                        android:layout_marginEnd="@dimen/item_horizontal_padding"
                        android:layout_centerVertical="true"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:focusable="true"
                        android:clickable="true" >

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:srcCompat="@drawable/ic_expand_more" />

                    </FrameLayout>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/separator"
                    android:background="?attr/colorSeparator"/>

                <LinearLayout
                    android:id="@+id/schedule_exams_content"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </android.support.v4.widget.SwipeRefreshLayout>

</LinearLayout>
