<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/item_new_vertical_padding"
    android:paddingBottom="@dimen/item_new_vertical_padding"
    android:paddingStart="@dimen/item_new_horizontal_padding"
    android:paddingEnd="@dimen/item_new_horizontal_padding">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp28"
        android:src="@drawable/ic_visibility_off" />

    <TextView
        android:id="@+id/ntd_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@string/font_bold"
        android:gravity="center"
        android:paddingBottom="@dimen/item_padding_eight"
        android:paddingTop="@dimen/item_padding_eight"
        android:text="@string/lorem_ipsum"
        android:textAllCaps="true"
        android:textColor="?android:attr/textColorPrimary"
        android:textSize="@dimen/font_size_14" />

</LinearLayout>