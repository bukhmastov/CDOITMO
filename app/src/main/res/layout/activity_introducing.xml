<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_pattern_vertical"
    android:backgroundTint="#9c27b0"
    android:backgroundTintMode="multiply">

    <RelativeLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/controls">

        <FrameLayout
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_above="@+id/title">

            <ImageView
                android:id="@+id/image_view"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                app:srcCompat="@drawable/image_intro_1"
                android:padding="36dp" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/desc">

            <TextView
                android:id="@+id/title_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:paddingStart="36dp"
                android:paddingEnd="36dp"
                android:text="@string/intro_title_1"
                android:textColor="#cddc39"
                android:textSize="@dimen/font_size_28" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <TextView
                android:id="@+id/desc_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                android:paddingBottom="36dp"
                android:paddingStart="36dp"
                android:paddingEnd="36dp"
                android:text="@string/intro_desc_1"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/font_size_20"
                android:maxLines="6"
                android:ellipsize="end" />

        </FrameLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/controls"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:background="#66000000">

        <FrameLayout
            android:id="@+id/skip"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_toStartOf="@+id/indicators"
            android:background="?android:attr/selectableItemBackgroundBorderless">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="@dimen/item_padding_half"
                android:text="@string/skip"
                android:textAllCaps="true"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/font_size_14" />

        </FrameLayout>

        <LinearLayout
            android:id="@+id/indicators"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:padding="@dimen/item_padding_half" />

        <FrameLayout
            android:id="@+id/next"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_toEndOf="@+id/indicators"
            android:background="?android:attr/selectableItemBackgroundBorderless">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="@dimen/item_padding_half"
                android:tint="#FFFFFF"
                app:srcCompat="@drawable/ic_chevron_right" />

        </FrameLayout>

    </RelativeLayout>

</RelativeLayout>