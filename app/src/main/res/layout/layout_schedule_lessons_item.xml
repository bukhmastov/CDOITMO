<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:minWidth="60dp"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/lesson_time_start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:text="10:00"
            android:textAlignment="center"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/lesson_time_icon"
            android:layout_width="match_parent"
            android:layout_height="16dp"
            app:srcCompat="@drawable/ic_access_time" />

        <TextView
            android:id="@+id/lesson_time_end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:text="10:00"
            android:textAlignment="center"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/data"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingBottom="7dp"
        android:paddingEnd="3dp"
        android:paddingStart="0dp"
        android:paddingTop="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lesson_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/lorem_ipsum"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="14sp"
                android:paddingStart="0dp"
                android:paddingEnd="4dp"/>

            <ImageView
                android:id="@+id/lesson_reduced_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:padding="2dp"
                app:srcCompat="@drawable/ic_visibility_off" />

            <ImageView
                android:id="@+id/lesson_synthetic_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:padding="2dp"
                app:srcCompat="@drawable/ic_synthetic" />

            <ImageView
                android:id="@+id/lesson_touch_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:srcCompat="@drawable/ic_more_vert" />

        </LinearLayout>

        <TextView
            android:id="@+id/lesson_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="@string/lorem_ipsum"
            android:textColor="?android:attr/textColorSecondary" />

        <LinearLayout
            android:id="@+id/lesson_flags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" />

        <TextView
            android:id="@+id/lesson_meta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="@string/lorem_ipsum"
            android:textColor="?android:attr/textColorSecondary" />

    </LinearLayout>

</LinearLayout>