<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryLight">@color/colorPrimaryLight</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimaryOpacity">@color/colorPrimaryOpacity</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimaryInverse">@color/textColorHeader</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>
        <item name="textColorPassed">@color/textColorSubjectPassed</item>
        <item name="textColorDegrade">@color/textColorDegrade</item>
        <item name="colorSeparator">@color/colorSeparator</item>
        <item name="colorBackgroundRefresh">@color/textColorHeader</item>
        <item name="colorBackgroundSection">@color/colorBackgroundSection</item>
        <item name="colorBackgroundSnackBar">@color/colorBackgroundSnackBar</item>
        <item name="colorIcXml">@color/colorIcXml</item>
        <item name="colorIcXmlRed">@color/colorIcXmlRed</item>
        <item name="colorScheduleFlagCommonBG">@color/colorScheduleFlagCommonBG</item>
        <item name="colorScheduleFlagPracticeBG">@color/colorScheduleFlagPracticeBG</item>
        <item name="colorScheduleFlagLectureBG">@color/colorScheduleFlagLectureBG</item>
        <item name="colorScheduleFlagLabBG">@color/colorScheduleFlagLabBG</item>
        <item name="colorScheduleFlagTEXT">@color/colorScheduleFlagTEXT</item>
        <item name="colorBackgroundCards">@color/colorBackgroundCards</item>
        <item name="android:textColorHint">@color/textColorSecondary</item>

        <item name="ic_cdo_small">@drawable/cdo_small</item>
        <item name="ic_security">@drawable/ic_security</item>
    </style>

    <style name="AppTheme.Dark" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimaryLight">@color/colorPrimaryLightInverse</item>
        <item name="colorPrimary">@color/colorPrimaryInverse</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkInverse</item>
        <item name="colorPrimaryOpacity">@color/colorPrimaryOpacityInverse</item>
        <item name="colorAccent">@color/colorAccentInverse</item>
        <item name="android:textColorPrimaryInverse">@color/textColorHeaderInverse</item>
        <item name="android:textColorPrimary">@color/textColorPrimaryInverse</item>
        <item name="android:textColorSecondary">@color/textColorSecondaryInverse</item>
        <item name="textColorPassed">@color/textColorSubjectPassedInverse</item>
        <item name="textColorDegrade">@color/textColorDegradeInverse</item>
        <item name="colorSeparator">@color/colorSeparatorInverse</item>
        <item name="colorBackgroundRefresh">@color/colorPrimaryInverse</item>
        <item name="colorBackgroundSection">@color/colorBackgroundSectionInverse</item>
        <item name="colorBackgroundSnackBar">@color/colorBackgroundSnackBarInverse</item>
        <item name="colorIcXml">@color/colorIcXmlInverse</item>
        <item name="colorIcXmlRed">@color/colorIcXmlRedInverse</item>
        <item name="colorScheduleFlagCommonBG">@color/colorScheduleFlagCommonBGInverse</item>
        <item name="colorScheduleFlagPracticeBG">@color/colorScheduleFlagPracticeBGInverse</item>
        <item name="colorScheduleFlagLectureBG">@color/colorScheduleFlagLectureBGInverse</item>
        <item name="colorScheduleFlagLabBG">@color/colorScheduleFlagLabBGInverse</item>
        <item name="colorScheduleFlagTEXT">@color/colorScheduleFlagTEXTInverse</item>
        <item name="colorBackgroundCards">@color/colorBackgroundCardsInverse</item>
        <item name="android:textColorHint">@color/textColorSecondaryInverse</item>

        <item name="ic_cdo_small">@drawable/cdo_small_dark</item>
        <item name="ic_security">@drawable/ic_security</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="AppTheme.Popup" parent="AppTheme">

        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="colorPopupBackground">@color/colorPopupBackground</item>
        <item name="colorPopupBackgroundFill">@color/colorPopupBackgroundFill</item>
        <item name="colorPrimaryDark">?attr/colorPopupBackground</item>

    </style>

    <style name="AppTheme.Popup.Dark" parent="AppTheme.Dark">

        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="colorPopupBackground">@color/colorPopupBackgroundInverse</item>
        <item name="colorPopupBackgroundFill">@color/colorPopupBackgroundFillInverse</item>
        <item name="colorPrimaryDark">?attr/colorPopupBackground</item>

    </style>

    <style name="AppTheme.Transparent" parent="AppTheme">

        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="colorPopupBackground">@android:color/transparent</item>
        <item name="colorPopupBackgroundFill">@android:color/transparent</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>

    </style>

    <style name="AppTheme.Search" parent="AppTheme">

        <item name="colorSearchBackgroundToolbar">@color/colorSearchBackgroundToolbar</item>
        <item name="colorSearchBackground">@color/colorSearchBackground</item>
        <item name="colorPrimaryDark">@color/colorSearchPrimaryDark</item>

    </style>

    <style name="AppTheme.Search.Dark" parent="AppTheme.Dark" >

        <item name="colorSearchBackgroundToolbar">@color/colorSearchBackgroundToolbarInverse</item>
        <item name="colorSearchBackground">@color/colorSearchBackgroundInverse</item>
        <item name="colorPrimaryDark">@color/colorSearchPrimaryDarkInverse</item>

    </style>

</resources>
