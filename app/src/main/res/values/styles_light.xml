        <item name="colorPrimaryDark">@color/colorPrimaryD</item>
        <item name="colorPrimaryOpacity">@color/colorPrimaryOpacity</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="colorBackground">@color/colorBackground</item>
        <item name="colorBackgroundCards">@color/colorBackgroundCards</item>
        <item name="colorBackgroundNavigation">@color/colorBackground</item>
        <item name="colorBackgroundRefresh">@color/textColorHeader</item>
        <item name="colorBackgroundSection">@color/colorBackgroundSection</item>
        <item name="colorBackgroundSnackBar">@color/colorBackgroundSnackBar</item>

        <item name="android:textColorPrimaryInverse">@color/textColorHeader</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>
