<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <ListPreference
        android:key="pref_lang"
        android:title="@string/pref_lang_title"
        android:summary="@string/pref_lang_title_summary"
        android:entries="@array/pref_lang_titles"
        android:entryValues="@array/pref_lang_values"
        android:defaultValue="default" />

    <ListPreference
        android:key="pref_default_fragment"
        android:title="@string/pref_default_fragment"
        android:entries="@array/pref_general_default_fragment_titles"
        android:entryValues="@array/pref_general_default_fragment_values"
        android:defaultValue="e_journal" />

    <Preference
        android:key="pref_theme"
        android:title="@string/theme"
        android:defaultValue="light" />

    <SwitchPreference
        android:key="pref_auto_logout"
        android:defaultValue="false"
        android:title="@string/pref_auto_logout"
        android:summary="@string/pref_auto_logout_summary"/>

    <SwitchPreference
        android:key="pref_initial_offline"
        android:defaultValue="false"
        android:title="@string/pref_initial_offline"
        android:summary="@string/pref_initial_offline_summary" />

    <EditTextPreference
        android:key="pref_group_force_override"
        android:title="@string/pref_group_force_override"
        android:summary="@string/pref_group_force_override_summary"
        android:dialogMessage="@string/pref_group_force_override_message"
        android:hint="@string/pref_group_force_override_hint"
        android:singleLine="true"/>

    <Preference
        android:key="pref_open_system_settings"
        android:title="@string/pref_open_system_settings" />

    <Preference
        android:key="pref_reset_application"
        android:title="@string/pref_reset_application_summary" />

</PreferenceScreen>