<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <ListPreference
        android:key="pref_lang"
        android:title="@string/pref_lang_title"
        android:summary="@string/pref_lang_title_summary"
        android:entries="@array/pref_lang_titles"
        android:entryValues="@array/pref_lang_values"
        android:defaultValue="default" />

    <ListPreference
        android:key="pref_default_fragment"
        android:title="@string/pref_default_fragment"
        android:entries="@array/pref_general_default_fragment_titles"
        android:entryValues="@array/pref_general_default_fragment_values"
        android:defaultValue="e_journal" />

    <SwitchPreference
        android:key="pref_auto_logout"
        android:defaultValue="false"
        android:title="@string/pref_auto_logout"
        android:summary="@string/pref_auto_logout_summary"/>

    <SwitchPreference
        android:key="pref_initial_offline"
        android:defaultValue="false"
        android:title="@string/pref_initial_offline"
        android:summary="@string/pref_initial_offline_summary" />

    <SwitchPreference
        android:key="pref_dark_theme"
        android:defaultValue="false"
        android:title="@string/pref_dark_theme"
        android:summary="@string/pref_dark_theme_summary" />

    <Preference
        android:key="pref_reset_application"
        android:title="@string/pref_reset_application_summary" />

    <PreferenceCategory android:title="@string/pref_category_system">

        <SwitchPreference
            android:key="pref_allow_send_reports"
            android:defaultValue="true"
            android:title="@string/pref_allow_send_reports"
            android:summary="@string/pref_allow_send_reports_summary"/>

        <SwitchPreference
            android:key="pref_allow_collect_analytics"
            android:defaultValue="true"
            android:title="@string/pref_allow_collect_analytics"
            android:summary="@string/pref_allow_collect_analytics_summary"/>

        <SwitchPreference
            android:key="pref_allow_owner_notifications"
            android:defaultValue="true"
            android:title="@string/pref_allow_owner_notifications"
            android:summary="@string/pref_allow_owner_notifications_summary"/>

    </PreferenceCategory>

</PreferenceScreen>