<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape>
            <solid android:color="?attr/colorSeparator" />
            <corners
                android:bottomLeftRadius="@dimen/rounded_corner"
                android:bottomRightRadius="@dimen/rounded_corner" />
        </shape>
    </item>
    <item
        android:left="1dp"
        android:right="1dp"
        android:bottom="1dp">
        <shape>
            <solid android:color="?attr/colorBackgroundSection" />
            <corners
                android:bottomLeftRadius="@dimen/rounded_corner"
                android:bottomRightRadius="@dimen/rounded_corner" />
        </shape>
    </item>
</layer-list>
